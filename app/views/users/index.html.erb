<%= link_to 'Нямаш регистрация? Регистрирай се!', new_user_path %>
<table>
	<tr>
		<td>Username</td>
		<td>|</td>	
		<td>Password</td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td>|</td>
			<td><%= user.password %></td>
			<td>|</td>
			<td><%= link_to 'Премахни', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
