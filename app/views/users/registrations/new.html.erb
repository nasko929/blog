<div style="text-align:center">
  <h2>Регистрация</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field_str">
      <%= f.label "Първо име" %><br />
      <%= f.text_field :first_name %>
    </div>
    <br>
    <div class="field_str">
      <%= f.label "Последно име" %><br />
      <%= f.text_field :last_name %>
    </div>
    <br>
    <div class="field_str">
      <%= f.label "Потребителско име" %><br />
      <%= f.text_field :username %>
    </div>
    <br>
    <div class="field_str">
      <%= f.label "E-mail" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <br>
    <div class="field_str">
      <%= f.label "Парола" %>
      <% if @minimum_password_length %>
      <em>(Поне <%= @minimum_password_length %> знака)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <br>
    <div class="field_str">
      <%= f.label "Повтори парола" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Регистрация", class: "btn btn-success" %>
    </div>
  <% end %>
  <br><br>
  <%= render "users/shared/links" %>
  <br>
  <%= link_to 'Назад' , welcome_index_path, class: "btn btn-back" %>
</div>