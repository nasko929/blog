<div class="tstyle container-fluid">
  <h2>Регистрация</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    

    <div class="form-group row">
      <div class="field_str marpad">
        <%= f.label "Първо име" %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class="field_str marpad">
        <%= f.label "Последно име" %><br />
        <%= f.text_field :last_name %>
      </div>
    </div>


    <div class="form-group row">
      <div class="field_str marpad">
        <%= f.label "Потребителско име" %><br />
        <%= f.text_field :username %>
      </div>

      <div class="field_str marpad">
        <%= f.label "E-mail" %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>


    <div class="form-group row">
      <div class="field_str marpad">
        <%= f.label "Парола" %>
        <% if @minimum_password_length %>
        <em>(Поне <%= @minimum_password_length %> знака)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <div class="field_str marpad">
        <%= f.label "Повтори парола" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="actions marpad hand">
      <%= f.submit "Регистрация", class: "btn btn-success hand" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
  <div class="marpad">
    <%= link_to 'Назад' , welcome_index_path, class: "btn btn-back" %>
  </div>
</div>