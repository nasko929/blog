
<p>
  <!--<strong><center>Title:</center></strong><br>-->
  <font size = 18>
  	<center><%= @article.title %></center>
  </font>
</p>
 
<p>
  <!--<strong>Text:</strong>-->
  <font size = 5>
  	<center><%= @article.text %></center>
  </font>
</p>
 
 <h2>Коментари</h2>
 <hr>
<% @article.comments.each do |comment| %>
  <p>
    <!--<strong>Commenter:</strong>-->
    <font size = 5><strong><%= comment.commenter %> каза:</strong></font> 
  
    <!--<strong>Comment:</strong>-->
    <%= comment.body %>
  </p>
  <%- if user_signed_in? && current_user[:email]=="atanas.vasilev.dobrev@gmail.com" %>
    <p>
  	  <%= link_to 'Изтрий коментара', [comment.article, comment],
  	               method: :delete,
  	               data: { confirm: 'Сигурен ли си?' } %>
   </p>
  <% end -%>
  <hr>
<% end %>

<h2>Добави коментар:</h2>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :Коментирал %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :Коментар %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
 
<%- if user_signed_in? && current_user[:email]=="atanas.vasilev.dobrev@gmail.com" %>
    <%= link_to 'Промени артикъла', edit_article_path(@article) %> |
<% end -%>
